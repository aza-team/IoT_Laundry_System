<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aza.lf.HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/colorWhite"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/IV"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/TV1"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TV2"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TV3"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TV4"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="not setting"
            />
        <ImageButton
            android:id="@+id/IB"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/able"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/under_bar">

            <Button
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/bt_home"
                android:text="목록보기"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:drawableTop="@drawable/ic_home_30dp"
                android:paddingTop="5dp"/>

            <Button
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/bt_reserve"
                android:text="예약하기"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:drawableTop="@drawable/ic_timer_30dp"
                android:paddingTop="5dp"/>

            <Button
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/bt_mine"
                android:text="내세탁기"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:drawableTop="@drawable/ic_bubble_30dp"
                android:paddingTop="5dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
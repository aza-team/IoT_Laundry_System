<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aza.lf.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/menu_bar">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/bt_alarm"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_alarm_50dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:text="세탁요정"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:id="@+id/bt_more"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_more_50dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/notice">


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment">
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="458dp"
        android:id="@+id/under_bar">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/bt_home"
            android:text="목록보기"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:textAlignment="center"
            android:background="@color/colorAccent"
            android:drawableTop="@drawable/ic_home_30dp"/>

        <Button
            android:id="@+id/bt_reserve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:drawableTop="@drawable/ic_timer_30dp"
            android:text="예약하기"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:id="@+id/bt_mine"
            android:text="내세탁기"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:background="@color/colorAccent"
            android:drawableTop="@drawable/ic_bubble_30dp"/>
    </LinearLayout>
</LinearLayout>
